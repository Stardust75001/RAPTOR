{% comment %}
Sélecteur de langue avec drapeaux
{% endcomment %}

{% assign current_path = request.path | remove_first: '/fr' | remove_first: '/de' | remove_first: '/nl' | remove_first: '/it' | remove_first: '/sv' | remove_first: '/da' | remove_first: '/es' %}
{% if current_path == '' or current_path == '/' %}
  {% assign current_path = '' %}
{% endif %}

<div class="language-selector">
  <a href="/{{ current_path }}" aria-label="English">
    <img src="{{ 'flag-en.svg' | asset_url }}" alt="English" width="40" height="40" class="flag-icon" loading="lazy">
  </a>
  <a href="/fr{{ current_path }}" aria-label="Français">
    <img src="{{ 'flag-fr.svg' | asset_url }}" alt="Français" width="40" height="40" class="flag-icon" loading="lazy">
  </a>
  <a href="/de{{ current_path }}" aria-label="Deutsch">
    <img src="{{ 'flag-de.svg' | asset_url }}" alt="Deutsch" width="40" height="40" class="flag-icon" loading="lazy">
  </a>
  
  <a href="/nl{{ current_path }}" aria-label="Nederlands">
    <img src="{{ 'flag-nl.svg' | asset_url }}" alt="Nederlands" width="40" height="40" class="flag-icon" loading="lazy">
  </a>

  <a href="/it{{ current_path }}" aria-label="Italiano">
    <img src="{{ 'flag-it.svg' | asset_url }}" alt="Italiano" width="40" height="40" class="flag-icon" loading="lazy">
  </a>

  <a href="/sv{{ current_path }}" aria-label="Svenska">
    <img src="{{ 'flag-sv.svg' | asset_url }}" alt="Svenska" width="40" height="40" class="flag-icon" loading="lazy">
  </a>

  <a href="/da{{ current_path }}" aria-label="Dansk">
    <img src="{{ 'flag-da.svg' | asset_url }}" alt="Dansk" width="40" height="40" class="flag-icon" loading="lazy">
  </a>

  <a href="/es{{ current_path }}" aria-label="Español">
    <img src="{{ 'flag-es.svg' | asset_url }}" alt="Español" width="40" height="40" class="flag-icon" loading="lazy">
  </a>
</div>
